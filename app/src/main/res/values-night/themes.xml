<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZonaAzul" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorprin</item>
        <item name="colorPrimaryVariant">@color/colorIconosOpaco</item>
        <item name="colorOnPrimary">@color/colorTexto</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSec</item>
        <item name="colorSecondaryVariant">@color/colorSec</item>
        <item name="colorOnSecondary">@color/colorTexto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorFondo</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZonaAzul.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZonaAzul.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ZonaAzul.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorprin</item>
        <item name="colorPrimaryVariant">@color/colorIconosOpaco</item>
        <item name="colorOnPrimary">@color/colorTexto</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSec</item>
        <item name="colorSecondaryVariant">@color/colorSec</item>
        <item name="colorOnSecondary">@color/colorTexto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorFondo</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorprin</item>
        <item name="android:textColorSecondary">@color/colorprin</item>
    </style>

    <style name="tamanio_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/colorCardView</item>
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/colorCardView</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorCardView</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <color name="colorRedOpaco">#6233C9</color>
    <color name="colorProgress">#364149</color>
    <color name="colorBotonesSeleccion">#C7CBCD</color>
    <color name="colorCardView">#262E33</color>
    <color name="colorSec">#FFFFFF</color>
    <color name="colorTexto">#F7FAFE</color>
    <color name="colorFondo">#2F343C</color>
    <color name="colorIconosOpaco">#354B70</color>
    <color name="colorTextoTitulos">#FFFFFF</color>
    <color name="colorTextHint">#9CA6A0</color>
    <color name="colorDesactivado">#A0A2AD</color>
    <color name="colorBlue">#1e88e5</color>


</resources>