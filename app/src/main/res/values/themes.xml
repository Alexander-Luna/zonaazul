<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZonaAzul" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorprin</item>
        <item name="colorPrimaryVariant">@color/colorIconosOpaco</item>
        <item name="colorOnPrimary">@color/colorTexto</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSec</item>
        <item name="colorSecondaryVariant">@color/colorSec</item>
        <item name="colorOnSecondary">@color/colorTexto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomShet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomShetStyle</item>
    </style>

    <style name="BottomShetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.ZonaAzul.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZonaAzul.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ZonaAzul.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.ZonaAzul">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorprin</item>
        <item name="colorPrimaryVariant">@color/colorIconosOpaco</item>
        <item name="colorOnPrimary">@color/colorTexto</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSec</item>
        <item name="colorSecondaryVariant">@color/colorSec</item>
        <item name="colorOnSecondary">@color/colorTexto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorFondo</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorprin</item>
        <item name="android:textColorSecondary">@color/colorprin</item>
    </style>


    <style name="tamanio_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/colorCardView</item>
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/colorCardView</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorprin</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="BotonPIN">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/colorTextoTitulos</item>
        <item name="android:background">@drawable/button_background_contornos</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#FF000000</color>

    <color name="colorTabScroll">#576173</color>
    <color name="colorprin">#2196f3</color>
    <color name="colorSec">#FFFFFF</color>
    <color name="colorFondo">#F7FFFFFF</color>
    <color name="colorWhite">#FFFFFF</color>
    <color name="colorBlack">#000000</color>
    <color name="colorIconosOpaco">#253A5E</color>
    <color name="colorTextoTitulos">#000000</color>
    <color name="colorTexto">#1C1C1C</color>
    <color name="colorRed">#FF1717</color>
    <color name="colorBlue">#2196f3</color>
    <color name="colorTextHint">#3C413E</color>
    <color name="colorGreen">#E40ED467</color>
    <color name="colorDesactivado">#3C3D42</color>
    <color name="colorCardView">#FFFFFF</color>
    <color name="colorRedOpaco">#FF5656</color>
    <color name="colorProgress">#E5E5E5</color>r
    <color name="coloTabScroll">#F0F1F2</color>
    <color name="colorBotonesSeleccion">#C7CBCD</color>
    <color name="colorYellow">#FFEB3B</color>
    <array name="gradiente_array">
        <item>#FF0000</item>
        <item>#FFFF00</item>
        <item>#00FF00</item>
        <item>#00FFFF</item>
        <item>#0000FF</item>
        <item>#FF00FF</item>
        <item>#FF0000</item>
    </array>
    <integer-array name="gradient_personalizado">
        <item>@color/colorBlue</item>
        <item>@color/teal_200</item>
        <item>@color/colorprin</item>
    </integer-array>

    <style name="PopupCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/colorprin</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="PopupCardThemeOverlay">
        <item name="materialCardViewStyle">@style/PopupCardStyle</item>
    </style>

</resources>